    "type": "statamic-addon",
    "keywords": [
        "statamic",
        "bard"
    ],
    "autoload": {
        "psr-4": {
            "BrunoSubert\\CustomBardClasses\\": "src"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Bruno Subert"
        }
    ],
    "require": {
        "statamic/cms": "^3.0"
    },
    "extra": {
        "statamic": {
            "name": "Custom Bard Classes",
            "description": "Custom Class addon for Bard in Statamic 3"
        },
        "laravel": {
            "providers": [
                "BrunoSubert\\CustomBardClasses\\ServiceProvider"
            ]
        }
    }
}
